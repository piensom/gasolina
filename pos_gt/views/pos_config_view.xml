<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pos_config_view_form_pos_gt" model="ir.ui.view">
        <field name="name">pos.config.form.view_pos_gt</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <sheet position="inside">
                <h2>Extras</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="ask_tag_number"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="ask_tag_number" string="Asignar numero al pedido"/>
                            <div class="text-muted">
                                Permite asignar una numero al pedido para que el cliente
                                se lleve el numero y luego se le llame por ese numero.
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="takeout_option"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="takeout_option" string="Seleccionar para llevar"/>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="default_client_id" string="Cliente por defecto"/>
                            <div class="content-group mt16">
                                <field name="default_client_id"/>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="default_client_id" string="Cuenta analítica por defecto"/>
                            <div class="content-group mt16">
                                <field name="analytic_account_id"/>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="diario_nota_credito_id" string="Diario para Nota de Crédito"/>
                            <div class="content-group mt16">
                                <field name="diario_nota_credito_id"/>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="permitir_devolver"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="permitir_devolver" string="Permitir devolver"/>
                        </div>
                    </div>
                </div>
            </sheet>
        </field>
    </record>
</odoo>
